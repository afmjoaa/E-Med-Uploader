<local:BaseDialogUserControl x:Class="custom_window.DialogMessageBox"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:custom_window"
                             mc:Ignorable="d">
    <StackPanel Background="White">
        <TextBlock Text="{Binding Message}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="{StaticResource FontSizeSeventeen}"
                   FontWeight="Medium"
                   FontFamily="{StaticResource DosisExtraLight}"
                   Foreground="{StaticResource TextDarkBrush}"
                   Padding="0 0 0 10" />
        <Button Content="{Binding OkText}"
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BaseDialogUserControl}}}"
                MinWidth="90"
                Margin="0 0 0 8"
                MaxWidth="90"/>
    </StackPanel>
</local:BaseDialogUserControl>